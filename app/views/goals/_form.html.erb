    <%= form.label :completed %>
    <%= form.check_box :completed, id: :goal_completed %>
  </div>

  <div class="field">
    <%= form.label :priority %>
    <%= form.number_field :priority, id: :goal_priority %>
  </div>

  <div class="field">
    <%= form.label :due_date %>
    <%= form.datetime_select :due_date, id: :goal_due_date %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
